<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="0.0.2" author="mauricio.anselmo" >
        <preConditions onFail="MARK_RAN">
	        <not>
	        <tableExists tableName="cliente" schemaName="public"/>
	        </not>
        </preConditions>

        <createTable tableName="cliente">
            <column name="cliente_id" type="bigint" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cliente_nome" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="cliente_data_nascimento" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="cliente_sexo" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>