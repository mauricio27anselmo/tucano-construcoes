<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="0.0.1" author="mauricio.anselmo" >
        <preConditions onFail="MARK_RAN">
        <not>
        <tableExists tableName="cargo" schemaName="public"/>
        </not>
        </preConditions>

        <createTable tableName="cargo">
            <column name="cargo_id" type="bigint" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cargo_descricao" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="cargo_salario" type="decimal(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>